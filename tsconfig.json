{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"declaration": true,
		"outDir": "./dist/",
		"sourceMap": false,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"lib": ["dom", "es2015", "es2017"],
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"],
	"exclude": ["**/**.stories.tsx"]
}
